[
{
  "add-field-type": {
    "name": "due_id",
    "class": "solr.TextField",
    "analyzer": {
      "tokenizer": {
        "class": "solr.KeywordTokenizerFactory"
      },
      "filters": [
        {
          "class": "solr.PatternReplaceFilterFactory",
          "pattern": "-",
          "replace": "all",
          "replacement": ""
        },
        {
          "class": "solr.LowerCaseFilterFactory"
        }
      ]
    }
  }
},
{
	"add-field": {
		"name": "license",
		"type": "string",
		"indexed": true,
		"stored": true,
		"multiValued": true
	}
},
{
  "add-dynamic-field": {
    "name": "id_*",
    "type": "due_id",
    "multiValued": true,
    "indexed": true,
    "stored": true
  }
},
{
  "add-dynamic-field": {
    "name": "nid_*",
    "type": "due_id",
    "multiValued": true,
    "indexed": true,
    "stored": true
  }
},
{
    "add-field": {
      "name": "tocLayout",
      "type": "string",
      "indexed": true,
      "stored": true,
      "multiValued": false
    }
},
{
    "add-field": {
      "name": "mir.toc.host.section",
      "type": "string",
      "indexed": true,
      "stored": true,
      "multiValued": false
    }
},
{
    "add-field": {
      "name": "facet.name",
      "type": "string",
      "indexed": true,
      "stored": false,
      "multiValued": true
    }
},
{
    "add-copy-field": {
      "source": "mods.name",
      "dest": "facet.name"
    }
},
{
    "add-field": {
      "name": "facet.subject",
      "type": "string",
      "indexed": true,
      "stored": false,
      "multiValued": true
    }
},
{
    "add-copy-field": {
      "source": "mods.subject",
      "dest": "facet.subject"
    }
}
]

