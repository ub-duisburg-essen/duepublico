<fop version="1.0">
  <accessibility>true</accessibility>
	<!-- Strict user configuration -->
  <strict-configuration>true</strict-configuration>
	<!-- Strict FO validation -->
  <strict-validation>true</strict-validation>
  <renderers>
    <renderer mime="application/pdf">
      <pdf-a-mode>PDF/A-3a</pdf-a-mode>
      <fonts>
        <font kerning="yes" embed-url="fonts/FreeSerif.ttf" embedding-mode="full">
          <font-triplet name="FreeSerif" style="normal" weight="normal" />
        </font>
        <font kerning="yes" embed-url="fonts/FreeSerifBold.ttf" embedding-mode="full">
          <font-triplet name="FreeSerif" style="normal" weight="bold" />
        </font>
      </fonts>
    </renderer>
  </renderers>
</fop>
